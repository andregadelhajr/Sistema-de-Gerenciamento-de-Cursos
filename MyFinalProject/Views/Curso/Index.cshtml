@model IEnumerable<APICurso.Models.Curso>

@{
    ViewData["Title"] = "Cursos";
}

<h1>Cursos</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary"> Adicionar </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DtInicial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DtFinal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QtdAlunos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.User)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DtInicial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DtFinal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdAlunos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.User)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CursoId" class="btn btn-primary">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.CursoId" class="btn btn-warning">Detalhe</a> 
                <a asp-action="Delete" asp-route-id="@item.CursoId" class="btn btn-danger">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
